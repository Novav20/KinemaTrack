@model IEnumerable<RobotArmDto>

@{
    ViewData["Title"] = "Robot Arms";
}

<h1>Robot Arms</h1>

<a class="btn btn-primary" asp-controller="RobotArms" asp-action="Create" role="button">Create New Robot Arm</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Created At</th>
            <th scope="col">Updated At</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var robotArm in Model)
        {
            <tr>
                <td>@robotArm.Name</td>
                <td>@robotArm.Description</td>
                <td>@robotArm.CreatedAt.ToShortDateString()</td>
                <td>@robotArm.UpdatedAt.ToShortDateString()</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@robotArm.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>